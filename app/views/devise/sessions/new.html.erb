<div class="container-logsign">

<h2>Log in</h2>

<div class="card-info">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
</div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", id: "btn" %>
  </div>
<% end %>
 <%= link_to "Forgot your password?", new_password_path(resource_name), id:"password-request" %><br />

<div class="card-links">
  Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
</div>
<div style="height: 100px;"></div>
</div>



